<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/searchToolbar"
	android:layout_width="match_parent"
	android:layout_height="@dimen/scanbot_navigation_layout_height"
	android:background="?scanbot_app_bar_color">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical">

		<ImageView
			android:id="@+id/ivBack"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/scanbot_ic_back"/>

		<TextView
			android:id="@+id/tvTitle"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="25dp"
            android:layout_weight="1"
			android:background="@color/scanbot_transparent"
			android:gravity="center"
			android:lines="1"
			android:padding="@dimen/scanbot_padding_normal"
			android:paddingRight="@dimen/scanbot_padding_micro"
			android:textColor="?scanbot_toolbar_text_color"
			android:textSize="@dimen/scanbot_text_size"
			android:textStyle="bold"
			tools:text="Document Name"/>

		<TextView
			android:id="@+id/tvSave"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="@color/scanbot_transparent"
			android:gravity="center_vertical"
			android:lines="1"
			android:padding="@dimen/scanbot_padding_normal"
			android:paddingRight="@dimen/scanbot_padding_micro"
			android:text="@string/scanbot_save"
			android:textColor="?scanbot_toolbar_text_color"
			android:textSize="@dimen/scanbot_text_size"
			android:textStyle="bold"/>

	</LinearLayout>

</androidx.appcompat.widget.Toolbar>
